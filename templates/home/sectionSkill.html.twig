                <a id="skillItemsButton" class="  d-md-none d-lg-none d-xl-none " data-bs-toggle="collapse" href="#backendSkillItems" role="button" aria-expanded="false" aria-controls="collapseExample">
                  <i class='bx bxs-chevrons-down fs-3 ' ></i>
                </a> 
              </h4> 
              <div id="backendSkillItems" class=" collapse d-md-block d-lg-block d-xl-block">
               {% for backend in backends %}
               {% for skill in backend.skills %}
                <div class=" p-2 d-flex flex-row" >
