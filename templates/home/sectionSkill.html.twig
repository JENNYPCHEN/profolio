                    <img class="img-fluid p-md-1 p-lg-1 p-xl-1 p-4 text-sm-center"src="{{ asset('uploads/skillLogo/')}}{{skill.logo}}">
                  </div>
                  <div class="col-8  p-3">
                    <div class="progress">
                      <div class= "progress-bar" role="progressbar"  aria-valuenow="{{skill.level}}" aria-valuemin="0" aria-valuemax="100" style="width:{{skill.level}}%; background-color:#fff458 ">
                      </div>
                    </div>
                  </div>
                </div>
                {% endfor %}
                {% endfor %}
                
                 </div>
            </div>
            
            <div id="autre" class="col-md-3 mx-2 my-4 col-12" style="background-color:lightgoldenrodyellow" >
              <h4 class="d-flex justify-content-between justify-content-md-center px-3 py-3 icon  " >Autres
                <a id="skillItemsButton" class="  d-md-none d-lg-none d-xl-none " data-bs-toggle="collapse" href="#otherSkillItems" role="button" aria-expanded="false" aria-controls="collapseExample">
                  <i class='bx bxs-chevrons-down fs-3 ' ></i>
                </a> 
              </h4> 
              <div id="otherSkillItems" class=" collapse d-md-block d-lg-block d-xl-block">
